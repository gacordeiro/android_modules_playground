<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red_color_primary</item>
        <item name="colorPrimaryDark">@color/red_color_primary_dark</item>
        <item name="colorAccent">@color/red_color_accent</item>
        <item name="android:colorBackground">@color/red_activity_background</item>
        <item name="android:textColor">@color/red_text_color_primary</item>
        <item name="android:textColorPrimary">@color/red_text_color_primary</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
